# BabylonPiles Environment Configuration
# Copy this file to .env and modify the values as needed

# Application
DEBUG=false
HOST=0.0.0.0
PORT=8080

# Database
DATABASE_URL=sqlite:///babylonpiles.db

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Storage
DATA_DIR=/mnt/babylonpiles/data
PILES_DIR=/mnt/babylonpiles/piles
TEMP_DIR=/tmp/babylonpiles

# Network (for WiFi hotspot functionality)
WIFI_SSID=BabylonPiles
WIFI_PASSWORD=babylonpiles123

# Mode settings
DEFAULT_MODE=store

# Update settings
AUTO_UPDATE_ENABLED=false
UPDATE_SCHEDULE=0 2 * * *

# Content sources
KIWIX_LIBRARY_URL=https://library.kiwix.org
OSM_PLANET_URL=https://planet.openstreetmap.org

# File size limits (in bytes)
MAX_FILE_SIZE=1073741824
MAX_UPLOAD_SIZE=104857600
